#include<stdio.h>
#include<conio.h>

int main () {


   float amt,sal,sma,da;

   clrscr();

   printf("Enter Your Salary to calculate Gross of SMA or DA :");
   scanf("%f",&sal);

   sma=(sal <=5000)?(sal*0.08):(sal >5000 && sal<=10000)?(sal*0.12):(sal>10000 && sal<=15000)?(sal*0.15):(sal>15000)?(sal*0.2):-161313;

   da=(sal <=5000)?(sal*0.2):(sal >5000 && sal<=10000)?(sal*0.3):(sal>10000 && sal<=15000)?(sal*0.4):(sal>15000)?(sal*0.5):-161313;

    amt=(sal+sma+da);        

   printf("The Salary with SMA and DA : %0.2f",amt);


 return 0;

}